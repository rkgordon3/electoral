<div class='row' >
  <div class='span8 offset2' >
  <% require 'date' %>
<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= "Error : #{msg}" %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Election Configuration Files" %><br />
    <%= f.select :config_file, @config_dirs, {}, :class=>'config_select' %>
  </div>
  <div class="field">
    <%= f.label "Date of Election" %><br />
    <%= f.date_select :start_date, 
            { :default => {:year => 2008, :month => 11, :day => 4},
              :use_short_month=>true },
            :class=>'date_select' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>


</div>
<% if Rails.env.development? %>
<div class="debug-panel">
  <%= debug (@game.inspect) %>
  <%= debug (Game.all.inspect) %>
  </div>
<% end %>
